<Window x:Class="facturas.FacturaDetalleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle factura" Height="700" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Detalle de la factura" FontSize="20" FontWeight="Bold" />

        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="0,10,0,10">
                <GroupBox Header="Cabecera" Margin="0,0,0,10">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Proveedor:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" />
                        <TextBox x:Name="TxtProveedor" Grid.Column="1" Grid.Row="0" Margin="5" IsReadOnly="True" />

                        <TextBlock Text="NIF:" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" />
                        <TextBox x:Name="TxtNif" Grid.Column="3" Grid.Row="0" Margin="5" IsReadOnly="True" />

                        <TextBlock Text="Direccion:" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" />
                        <TextBox x:Name="TxtDireccion" Grid.Column="1" Grid.Row="1" Margin="5" IsReadOnly="True" />

                        <TextBlock Text="Telefono:" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" />
                        <TextBox x:Name="TxtTelefono" Grid.Column="3" Grid.Row="1" Margin="5" IsReadOnly="True" />

                        <TextBlock Text="Fecha:" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" />
                        <TextBox x:Name="TxtFecha" Grid.Column="1" Grid.Row="2" Margin="5" IsReadOnly="True" />

                        <TextBlock Text="Numero:" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" />
                        <TextBox x:Name="TxtNumero" Grid.Column="3" Grid.Row="2" Margin="5" IsReadOnly="True" />
                    </Grid>
                </GroupBox>

                <GroupBox Header="Conceptos" Margin="0,0,0,10">
                    <DataGrid x:Name="DgConceptos" AutoGenerateColumns="False" Height="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Codigo" Binding="{Binding Codigo}" Width="80" />
                            <DataGridTextColumn Header="Descripcion" Binding="{Binding Descripcion}" Width="*" />
                            <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="80" />
                            <DataGridTextColumn Header="PrecioUnitario" Binding="{Binding PrecioUnitario}" Width="120" />
                            <DataGridTextColumn Header="Importe" Binding="{Binding Importe}" Width="120" IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <GroupBox Header="Pie" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Base imponible:" />
                        <TextBlock x:Name="TxtBase" />
                        <TextBlock Text="IVA:" />
                        <TextBlock x:Name="TxtIva" />
                        <TextBlock Text="Total:" FontWeight="Bold" />
                        <TextBlock x:Name="TxtTotal" FontWeight="Bold" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Imprimir PDF" Click="BtnImprimirPdf_Click" Margin="5" />
            <Button Content="Cerrar" Click="BtnCerrar_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="facturas.EmitirFacturaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Emitir factura - CTI Canarias" Height="700" Width="900"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0">
            <TextBlock Text="Factura - CTI Canarias" FontSize="20" FontWeight="Bold" />
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel Orientation="Vertical" Margin="0,10,0,10">
                <GroupBox Header="Cabecera" Margin="0,0,0,10">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Emisor:" Grid.Column="0" VerticalAlignment="Center" />
                        <TextBox x:Name="TxtEmisor" Grid.Column="1" Margin="5" Text="CTI Canarias SL" />
                        <TextBlock Text="NIF:" Grid.Column="2" VerticalAlignment="Center" />
                        <TextBox x:Name="TxtNif" Grid.Column="3" Margin="5" Text="B76543210" />
                        <TextBlock Text="Direccion:" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" />
                        <TextBox x:Name="TxtDireccion" Grid.Column="1" Grid.Row="1" Margin="5" Text="Calle Tenerife 5, 38001, Las Palmas" />
                        <TextBlock Text="Telefono:" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" />
                        <TextBox x:Name="TxtTelefono" Grid.Column="3" Grid.Row="1" Margin="5" Text="(+34) 928 000 111" />
                        <TextBlock Text="Cliente:" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" />
                        <TextBox x:Name="TxtCliente" Grid.Column="1" Grid.Row="2" Margin="5" Text="Inversiones Canarias SA" />
                        <TextBlock Text="Fecha:" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" />
                        <DatePicker x:Name="DpFecha" Grid.Column="3" Grid.Row="2" Margin="5" />
                    </Grid>
                </GroupBox>

                <GroupBox Header="Conceptos (Cuerpo)" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <DataGrid x:Name="DgConceptos" Grid.Row="1" AutoGenerateColumns="False" Height="200" CanUserAddRows="True" CellEditEnding="DgConceptos_CellEditEnding" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Codigo" Binding="{Binding Codigo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80" />
                                <DataGridTextColumn Header="Descripcion" Binding="{Binding Descripcion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" Width="80" />
                                <DataGridTextColumn Header="Precio Unitario" Binding="{Binding PrecioUnitario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="120" />
                                <DataGridTextColumn Header="Importe" Binding="{Binding Importe, Mode=OneWay}" Width="120" IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Pie" Margin="0,0,0,10">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Observaciones:" />
                            <TextBox x:Name="TxtObservaciones" Height="60" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="Base imponible:" />
                            <TextBlock x:Name="TxtBase" Text="0.00" />
                            <TextBlock Text="IVA (21%):" />
                            <TextBlock x:Name="TxtIva" Text="0.00" />
                            <TextBlock Text="Total:" FontWeight="Bold" />
                            <TextBlock x:Name="TxtTotal" Text="0.00" FontWeight="Bold" />
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Generar codigo" Click="BtnGenerarCodigo_Click" Margin="5" />
            <Button Content="Descargar XML" Click="BtnDescargarXml_Click" Margin="5" />
            <Button Content="Enviar" Click="BtnEnviar_Click" Margin="5" />
            <Button Content="Imprimir PDF" Click="BtnImprimirPdf_Click" Margin="5" />
            <Button Content="Cerrar" Click="BtnCerrar_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>